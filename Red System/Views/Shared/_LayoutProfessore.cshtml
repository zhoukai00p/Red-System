                <a href="~/Reserved/ProfessoreInsertVerifica/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><button type="button" class="btn btn-danger" >Inserisci verifica</button></a>
                <a href="~/Reserved/ProfessoreSelezionaVerifica/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><button type="button" class="btn btn-danger" >Seleziona verifica</button></a>
                <a href="~/Reserved/ProfessoreAssegnaVerifica/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><button type="button" class="btn btn-danger">Assegna Verifica</button></a>
            </div>
            <br />
            <br />
            <div class="text-center center-block">
            @RenderBody()
            </div>
</body>
</html>