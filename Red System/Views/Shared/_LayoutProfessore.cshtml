<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Red System</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>


</head>
<body style="background-color: #ffffe6">

    <div class="sidebar d-inline-block" style="background-color: #ffcc66">
        <a class="nav-link" href="~/Reserved/HomeProfessore/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="laptop-outline"></ion-icon><h3 class="text-danger"> Red System</h3></a>
        <br />
        <a href="~/Reserved/HomeProfessore/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="home-outline"></ion-icon><span class="text-dark"> Pagina principale</span></a>
        <br />
        <a href="~/Reserved/ProfessoreInsertClasse/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="add-outline"></ion-icon><span class="text-dark"> Inserisci classe</span></a>
        <br />
        <a href="~/Reserved/ProfessoreInsertStudente/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="add-outline"></ion-icon><span class="text-dark"> Inserisci studente</span></a>
        <br />
        <a href="~/Reserved/ProfessoreInsertVerifica/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="add-outline"></ion-icon><span class="text-dark"> Inserisci verifica</span></a>
        <br />
        <a href="~/Reserved/ProfessoreSelezionaVerifica/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="checkbox-outline"></ion-icon><span class="text-dark"> Seleziona verifica</span></a>
        <br />
        <a href="~/Reserved/ProfessoreAssegnaVerifica/@(((Red_System.Models.Entities.Professore)Session["utenteLoggato"]).ID)"><ion-icon name="checkmark-done-outline"></ion-icon><span class="text-dark"> Assegna Verifica</span></a>
    </div>
    <div class="text-center center-block">
        @RenderBody()
    </div>
</body>
</html>